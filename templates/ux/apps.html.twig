{% extends 'ux.html.twig' %}

{% block body %}
    <turbo-frame id="ux_app" data-turbo-action="advance" data-turbo-frame="_self">
        <section id="portfolio">
            <div class="container-xxl my-5 mt-15">
                <header class="section-header my-5">
                    <h3 class="section-title my-5">Applications</h3>
                </header>

                <div class="row h-100 d-flex align-items-center justify-content-center">

                    {% for application in apps %}
                        <div class="col-lg-4 col-md-6 portfolio-item" data-aos="zoom-in">
                            <div class="portfolio-wrap">
                                <figure>
                                    <img src="{{ asset(application.img, 'cdn') }}"
                                         class="img-fluid" alt="">
                                </figure>

                                <div class="portfolio-info">
                                    <h4>
                                        <a href="{{ path("ux_tools",{"stack": app.request.get('stack') , "app": application.name }) }}">{{ application.name }}</a>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </turbo-frame>
{% endblock %}