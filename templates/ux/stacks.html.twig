{% extends 'ux.html.twig' %}

{% block body %}
    <turbo-frame id="ux_app" data-turbo-action="advance" data-turbo-frame="_self">
        <section id="portfolio">
            <div class="container-xxl my-5 mt-15">
                <header class="section-header my-5">
                    <h3 class="section-title my-5">Tech stack</h3>
                </header>

                <div class="row d-flex align-items-center justify-content-center">
                    {% for i, stack in stacks %}
                        <div class="col-lg-4 col-md-6 col-sm-6 portfolio-item filter-app ">
                            <div class="portfolio-wrap">
                                <figure>
                                    <img src="{{ asset("build/img/" ~ stack.img) }}" class="img-fluid" alt="">
                                </figure>
                                <div class="portfolio-info">
                                    <h4>
                                        <a href="{{ path('ux_stack',{'stack': stack.name}) }}">{{ stack.name }}</a>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </turbo-frame>
{% endblock %}
