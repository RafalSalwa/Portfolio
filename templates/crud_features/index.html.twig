{% extends 'admin.html.twig' %}

{% block title %}Features index{% endblock %}

{% block body %}
    <h1>Features index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Url</th>
            <th>Img</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for feature in features %}
            <tr>
                <td>{{ feature.id }}</td>
                <td>{{ feature.name }}</td>
                <td>{{ feature.description }}</td>
                <td>{{ feature.url }}</td>
                <td>{{ feature.img }}</td>
                <td>
                    <a href="{{ path('app_crud_features_show', {'id': feature.id}) }}">show</a>
                    <a href="{{ path('app_crud_features_edit', {'id': feature.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crud_features_new') }}">Create new</a>
{% endblock %}
