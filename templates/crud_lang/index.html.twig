{% extends 'admin.html.twig' %}

{% block title %}Languages list{% endblock %}
{% block header %}Languages list{% endblock %}
{% block body %}
    <div class="row">
        <div class="card pb-5">
            <div class="card-header">
                <div class="row">
                    <div class="col-xl-11">
                        <h5></h5>
                    </div>
                    <div class="col-xl-1 text-end">
                        <a href="{{ path('admin_crud_lang_new') }}">
                            <button type="button" class="btn btn-primary">new</button>
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Img</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for lang in langs %}
                            <tr>
                                <td>{{ lang.id }}</td>
                                <td>{{ lang.name }}</td>
                                <td>{{ lang.img }}</td>
                                <td class="text-end">
                                    <a href="{{ path('admin_crud_lang_show', {'id': lang.id}) }}">
                                        <button type="button" class="btn btn-primary">show</button>
                                    </a>

                                    <a href="{{ path('admin_crud_lang_edit', {'id': lang.id}) }}">
                                        <button type="button" class="btn btn-info">edit</button>
                                    </a>
                                    <a href="{{ path('admin_crud_lang_delete', {'id': lang.id}) }}">
                                        <button type="button" class="btn btn-danger">delete</button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
