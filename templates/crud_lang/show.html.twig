{% extends 'admin.html.twig' %}

{% block title %}Apps{% endblock %}
{% block header %}{{ lang.name }} {% endblock %}
{% block body %}
    <div class="row">
        <div class="card">
            <div class=card-header">
                <div class="col-xl-12">
                    <h1>Language</h1>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Image</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ lang.id }}</td>
                            <td>{{ lang.name }}</td>
                            <td>{{ lang.img }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('admin_crud_lang_index') }}">back to list</a>

                    <a href="{{ path('admin_crud_lang_edit', {'id': lang.id}) }}">edit</a>

                    {{ include('crud_lang/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="card">
            <div class=card-header">
                <div class="col-xl-12 py-5">
                    <div class="row">
                        <div class="col-xl-11">
                            <h1>Apps</h1>
                        </div>
                        <div class="col-xl-1 text-end">
                            <a href="{{ path('admin_crud_application_new') }}">
                                <button type="button" class="btn btn-primary">new</button>
                            </a>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Apps</th>
                            <th>Slug</th>
                            <th>Img</th>
                            <th class="text-end">actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for application in apps %}
                            <tr>
                                <td>{{ application.id }}</td>
                                <td>{{ application.name }}</td>
                                <td>{{ application.lang }}</td>
                                <td>{{ application.slug }}</td>
                                <td>{{ application.img }}</td>
                                <td class="text-end">
                                    <a href="{{ path('admin_crud_application_show', {'id': application.id}) }}">
                                        <button type="button" class="btn btn-primary">show</button>
                                    </a>

                                    <a href="{{ path('admin_crud_application_edit', {'id': application.id}) }}">
                                        <button type="button" class="btn btn-info">edit</button>
                                    </a>
                                    <a href="{{ path('admin_crud_application_delete', {'id': application.id}) }}">
                                        <button type="button" class="btn btn-danger">delete</button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a href="{{ path('admin_crud_lang_index') }}">back to list</a>

                    <a href="{{ path('admin_crud_lang_edit', {'id': lang.id}) }}">edit</a>

                    {{ include('crud_lang/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
